<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.ColorRingActivity">

    <ImageView
        android:id="@+id/shape_ring"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:background="@drawable/color_ring" />

    <org.andcreator.andview.view.ColorRingView
        android:id="@+id/view_ring"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:layout_toRightOf="@+id/shape_ring" />

    <org.andcreator.andview.view.UnclosedColorRingView
        android:id="@+id/view_unclosed_ring"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:layout_below="@+id/shape_ring"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>